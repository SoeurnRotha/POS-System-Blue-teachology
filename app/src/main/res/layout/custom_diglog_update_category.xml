<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/fontone"
                android:padding="20dp"
                android:text="Update"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/category_update_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edit"
                android:fontFamily="@font/fonttow"
                android:hint="Category id"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/category_update_name_english"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edit"
                android:fontFamily="@font/fonttow"
                android:hint="Category name english"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/category_update_name_khmer"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edit"
                android:fontFamily="@font/fonttow"
                android:hint="Category name khmer"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:orientation="horizontal"

                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:background="@color/red"
                    android:fontFamily="@font/fontone"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@color/green"
                    android:fontFamily="@font/fontone"
                    android:text="Save"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>