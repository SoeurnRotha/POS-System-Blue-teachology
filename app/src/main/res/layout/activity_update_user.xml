<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Update_User">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_update"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:title="Update User"
        android:background="@color/green"/>


    <EditText
        android:id="@+id/update_id"
        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:layout_below="@+id/toolbar_update"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_edit"

        android:padding="20dp" />

    <EditText
        android:id="@+id/update_username"
        android:layout_below="@+id/update_id"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:padding="20dp"

        android:background="@drawable/custom_edit"/>
    <EditText
        android:id="@+id/update_password"
        android:layout_below="@+id/update_username"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:padding="20dp"

        android:background="@drawable/custom_edit"/>


    <androidx.appcompat.widget.AppCompatButton
        android:text="Update now"
        android:id="@+id/update_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_below="@+id/update_password"/>

</RelativeLayout>