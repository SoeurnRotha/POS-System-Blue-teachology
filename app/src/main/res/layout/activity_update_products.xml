<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products.Update_products">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_update_products"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/purple_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update prroducts"
            android:textSize="10pt"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="20dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/select_image_products_update"
            android:id="@+id/outlinedTextField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name english"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_product_name_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/view_update_products"
            android:layout_centerHorizontal="true"
            android:id="@+id/show_image_products_for_update"
            android:layout_width="150dp"
            android:background="@drawable/ic_launcher_background"
            android:layout_height="150dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:id="@+id/select_image_products_update"
            android:layout_below="@id/show_image_products_for_update"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/outlinedTextField1"
            android:id="@+id/outlinedTextField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name khmer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_margin="20dp"
                android:id="@+id/update_product_name_khmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/outlinedTextField2"
            android:id="@+id/outlinedTextField3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product QTY"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_product_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/outlinedTextField3"
            android:id="@+id/outlinedTextField4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product price"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_margin="20dp"
                android:id="@+id/update_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/outlinedTextField4"
            android:id="@+id/outlinedTextField5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product cost"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_product_cost"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField6"
            android:layout_below="@id/outlinedTextField5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_product_tax"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField7"
            android:layout_below="@id/outlinedTextField6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product barcode"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_product_barcode"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout

            android:id="@+id/category_listner"
            android:gravity="center_horizontal"
            android:layout_below="@+id/outlinedTextField7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="8pt"
                />

            <Spinner
                android:padding="10dp"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_category_select_item_in_products"/>
        </LinearLayout>



        <LinearLayout

            android:id="@+id/inventory_listner"
            android:gravity="center_horizontal"
            android:layout_below="@+id/category_listner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textSize="8pt"
                />

            <Spinner
                android:padding="10dp"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_inventory_select_item_in_products"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/update_product_save_now"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/inventory_listner"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/purple_700"
            android:fontFamily="@font/fontone"
            android:text="Save now"
            android:textColor="@color/white"
            android:textSize="10pt"
            android:textStyle="bold" />
    </RelativeLayout>







</ScrollView>