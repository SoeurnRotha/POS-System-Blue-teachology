<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit.UpdateUnit">


    <View
        android:id="@+id/view_update"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/table_view_default_selected_background_color"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Unit"
        android:fontFamily="@font/fontone"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:layout_centerHorizontal="true"
        android:padding="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/box_1"
        android:layout_below="@id/view_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit title"
        android:layout_marginTop="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/update_unit_title"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_1"
        android:hint="Unit type"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:id="@+id/update_unit_type"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/update_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/box2"
        android:layout_centerHorizontal="true"
        android:text="Update"
        android:textColor="@color/white"
        android:fontFamily="@font/fontone"
        android:background="@color/red"
        />
</RelativeLayout>